  <div class="progress-bar" role="progressbar" style="width: 33%; height: 20px;">Шаг - 1</div>
</div>
<form name="step-form">
  <div class="form-group">
    <label for="field_summa">Сума</label>
    <input type="text" name="suma" class="form-control" id="field_summa" placeholder="Введите суму" disabled>
  </div>
  <div class="form-group">
    <label for="field_srok">Срок</label>
    <input type="text" name="srok" class="form-control" id="field_srok" placeholder="Введите срок" disabled>
  </div>
  <div class="form-group">
    <label for="field_inn">ИНН</label>
    <input type="text" name="inn" class="form-control" id="field_inn" placeholder="Введите ИНН" disabled>
  </div>
  <div class="form-group">
    <label for="field_firstname">Имя</label>
    <input type="text" name="firstname" class="form-control" id="field_firstname" placeholder="Введите ваше имя" disabled>
  </div>
  <div class="form-group">
    <label for="field_lastname">Фамилия</label>
    <input type="text" name="lastname" class="form-control" id="field_lastname" placeholder="Введите вашу Фамилию" disabled>
  </div>
  <div class="form-group">
    <label for="field_city">Город</label>
    <input type="text" name="city" class="form-control" id="field_city" placeholder="Введите ваш город" disabled>
  </div>
  <div class="row justify-content-between">
    <button type="button" id="back" class="btn btn-warning" data-prev-step>Назад</button>
    <button type="button" data-finish-step class="btn btn-primary">Отправить</button>
  </div>
</form>
