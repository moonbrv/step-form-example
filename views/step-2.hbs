<div class="progress">
  <div class="progress-bar" role="progressbar" style="width: 33%; height: 20px;">Шаг - 1</div>
</div>
<form name="step-form">
  <div class="form-group">
    <label for="field_inn">ИНН</label>
    <input type="text" name="inn" class="form-control" id="field_inn" placeholder="Введите ИНН" required data-valid-inn data-inn data-twentyone>
  </div>
  <div class="form-group">
    <label for="field_firstname">Имя</label>
    <input type="text" name="firstname" class="form-control" id="field_firstname" placeholder="Введите ваше имя" required>
  </div>
  <div class="form-group">
    <label for="field_lastname">Фамилия</label>
    <input type="text" name="lastname" class="form-control" id="field_lastname" placeholder="Введите вашу Фамилию" required>
  </div>
  <div class="form-group">
    <label for="field_city">Город</label>
    <input type="text" name="city" class="form-control" id="field_city" data-lazy-city placeholder="Введите ваш город" required>
  </div>
  <div class="row justify-content-between">
    <button type="button" class="btn btn-warning" data-prev-step>Назад</button>
    <button type="button" class="btn btn-primary" data-next-step>Далее</button>
  </div>
</form>
<script src="js/step2.js"></script>
